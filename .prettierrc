{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "all",
	"htmlWhitespaceSensitivity": "ignore",
	"semi": false,
	"printWidth": 100,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "prettier-plugin-gherkin"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"tailwindStylesheet": "./src/routes/layout.css"
}
